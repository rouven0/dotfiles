general {
        colors = false
        interval = 1
}

order += "wireless wls3"
order += "battery 0"
order += "tztime berlin"

wireless wls3 {
        format_up = "Connected to %essid (%bitrate) %ip"
        format_down = "W: down"
}

battery 0 {
        format = "Battery %percentage" 
        format_down = "No battery"
        path = "/sys/class/power_supply/BAT%d/uevent"
}

tztime berlin {
        format = "%d.%m.%Y %H:%M:%S"
        timezone = "Europe/Berlin"
}
