general {
        colors = false
        interval = 1
}

order += "wireless wls3"
order += "cpu_usage"
order += "volume master"
order += "battery 0"
order += "tztime berlin"

wireless wls3 {
        format_up = "Connected to %essid (%bitrate) %ip"
        format_down = "W: down"
}

cpu_usage {
        format = "CPU %usage"
        max_threshold = "75"
        format_above_threshold = "Warning: CPU %usage"
}

volume master {
        format = "ðŸ”Š: %volume"
        format_muted = "ðŸ”ˆ"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "Battery %percentage"
        format_down = "No battery"
        path = "/sys/class/power_supply/BAT%d/uevent"
}

tztime berlin {
        format = "%d.%m.%Y %H:%M:%S"
        timezone = "Europe/Berlin"
}
